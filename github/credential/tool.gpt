Name: GitHub OAuth Credential
Share Credential: ../../oauth2 as github.write
    with GITHUB_TOKEN as token and
        GitHub as integration and
        "repo,project,read:user,read:org" as scope
Type: credential

---
Name: github-cred
Tools: ../../oauth2

#!sys.call ../../oauth2

{
	"oauthInfo": {
		"integration": "github",
		"token": "GITHUB_TOKEN",
		"scope": [
			"repo"
		]
	},
	"promptInfo": {
        "fields" : [
            {
                "name": "GitHub API Key",
                "description": "A personal access token for your GitHub account. This must have the 'repo' permission.",
                "sensitive": true,
                "env": "GITHUB_TOKEN"
            }
        ],
        "message": "Enter your GitHub personal access token."
    },
    "validationTool": "github.com/obot-platform/tools/github/validate-cred.gpt"
}
